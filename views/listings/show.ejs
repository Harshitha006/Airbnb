<%- include('../partials/header') %>

<div class="row mt-3">
    
<div class="col-8 offset-3">
    <h3>Listing Details</h3>
</div>
<div class="card col-5 offset-3 show-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    
    <div class="card-body">
    <!-- <p class="card-text">
        <b><%= listing.title %></b> <br>
        <%= listing.description %> <br>
        <b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
        <b>Location:</b> <%= listing.location %> <br>
        <b>Country:</b> <%= listing.country %> <br>
    </p> -->
    <p class="card-text">
        <b><%= listing.title || "No Title Provided" %></b> <br>
        <%= listing.description || "No Description Provided" %> <br>

        <% if (listing.price != null) { %>
            <b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
        <% } else { %>
            <b>Price:</b> <span class="text-muted">Not available</span> <br>
        <% } %>

        <b>Location:</b> <%= listing.location || "Not Specified" %> <br>
        <b>Country:</b> <%= listing.country || "Not Specified" %> <br>
    </p>
    </div>
</div>
   
    <br>
    <div class="btns">
        <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
        <button class="btn btn-dark offset-3">Delete</button>
         </form>
    </div>
    
    
</div>
<%- include('../partials/footer') %>